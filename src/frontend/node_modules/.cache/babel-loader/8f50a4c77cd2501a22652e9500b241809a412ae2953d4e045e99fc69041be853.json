{"ast":null,"code":"export default {\n  data() {\n    return {\n      tabs: ['Fiction', 'Fantasy', 'Science Fiction', 'Mystery', 'Thriller', 'Romance', 'Historical', 'Non-Fiction', 'Biography', 'Self-Help', 'Horror', 'Adventure', 'Comedy', 'Drama'],\n      activeTab: 1,\n      isDragging: false,\n      startX: 0,\n      scrollLeft: 0\n    };\n  },\n  methods: {\n    setActiveTab(index) {\n      this.activeTab = index;\n    },\n    startDrag(e) {\n      this.isDragging = true;\n      this.startX = e.pageX - this.$refs.tabBox.offsetLeft;\n      this.scrollLeft = this.$refs.tabBox.scrollLeft;\n    },\n    onDrag(e) {\n      if (!this.isDragging) return;\n      e.preventDefault();\n      const x = e.pageX - this.$refs.tabBox.offsetLeft;\n      const walk = (x - this.startX) * 2; // Multiply by 2 for faster scroll\n      this.$refs.tabBox.scrollLeft = this.scrollLeft - walk;\n    },\n    stopDrag() {\n      this.isDragging = false;\n    },\n    scrollLeftByAmount() {\n      this.$refs.tabBox.scrollLeft -= 200; // Adjusted scroll amount\n    },\n    scrollRight() {\n      this.$refs.tabBox.scrollLeft += 200; // Adjusted scroll amount\n    },\n    handleIcons() {\n      const maxScrollLeft = this.$refs.tabBox.scrollWidth - this.$refs.tabBox.clientWidth;\n      this.$refs.leftIcon.style.display = this.$refs.tabBox.scrollLeft <= 0 ? 'none' : 'flex';\n      this.$refs.rightIcon.style.display = maxScrollLeft - this.$refs.tabBox.scrollLeft <= 1 ? 'none' : 'flex';\n    }\n  },\n  mounted() {\n    this.handleIcons();\n    this.$refs.tabBox.addEventListener('scroll', this.handleIcons);\n  },\n  beforeUnmount() {\n    this.$refs.tabBox.removeEventListener('scroll', this.handleIcons);\n  }\n};","map":{"version":3,"names":["data","tabs","activeTab","isDragging","startX","scrollLeft","methods","setActiveTab","index","startDrag","e","pageX","$refs","tabBox","offsetLeft","onDrag","preventDefault","x","walk","stopDrag","scrollLeftByAmount","scrollRight","handleIcons","maxScrollLeft","scr