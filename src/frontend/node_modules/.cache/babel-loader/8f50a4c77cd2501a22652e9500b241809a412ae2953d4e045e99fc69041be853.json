urn;\r\n        e.preventDefault();\r\n        const x = e.pageX - this.$refs.tabBox.offsetLeft;\r\n        const walk = (x - this.startX) * 2; // Multiply by 2 for faster scroll\r\n        this.$refs.tabBox.scrollLeft = this.scrollLeft - walk;\r\n      },\r\n      stopDrag() {\r\n        this.isDragging = false;\r\n      },\r\n      scrollLeftByAmount() {\r\n        this.$refs.tabBox.scrollLeft -= 200; // Adjusted scroll amount\r\n      },\r\n      scrollRight() {\r\n        this.$refs.tabBox.scrollLeft += 200; // Adjusted scroll amount\r\n      },\r\n      handleIcons() {\r\n        const maxScrollLeft =\r\n          this.$refs.tabBox.scrollWidth - this.$refs.tabBox.clientWidth;\r\n        this.$refs.leftIcon.style.display =\r\n          this.$refs.tabBox.scrollLeft <= 0 ? 'none' : 'flex';\r\n        this.$refs.rightIcon.style.display =\r\n          maxScrollLeft - this.$refs.tabBox.scrollLeft <= 1 ? 'none' : 'flex';\r\n      },\r\n    },\r\n    mounted() {\r\n      this.handleIcons();\r\n      this.$refs.tabBox.addEventListener('scroll', this.handleIcons);\r\n    },\r\n    beforeUnmount() {\r\n      this.$refs.tabBox.removeEventListener('scroll', this.handleIcons);\r\n    },\r\n  };\r\n  </script>\r\n  \r\n  <style scoped lang=\"scss\">\r\n  @import url('https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600&display=swap');\r\n  \r\n  * {\r\n    margin: 0;\r\n    padding: 0;\r\n    box-sizing: border-box;\r\n    list-style: none;\r\n    font-family: 'Poppins', sans-serif;\r\n  }\r\n  \r\n  .wrapper {\r\n    padding: 20px;\r\n    position: relative;\r\n    max-width: 90%;\r\n    background-color: #fff;\r\n    border-radius: 10px;\r\n    overflow-x: hidden;\r\n    border: 1px solid #e0e0e0;\r\n  }\r\n  \r\n  .wrapper .icon {\r\n    position: absolute;\r\n    top: 0;\r\n    height: 100%;\r\n    width: 50px;\r\n    display: flex;\r\n    align-items: center;\r\n    justify-content: center;\r\n    cursor: pointer;\r\n    background: linear-gradient(90deg, #f